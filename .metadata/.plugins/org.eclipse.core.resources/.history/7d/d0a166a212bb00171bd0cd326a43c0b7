			HttpClient client = new DefaultHttpClient();
			HttpGet get = new HttpGet();

			return null;
		}

		@Override
		protected void onPostExecute(QuizClass result) {
			// TODO Auto-generated method stub
			super.onPostExecute(result);
		}

	}
}
